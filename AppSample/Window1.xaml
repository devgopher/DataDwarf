<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="AppSample.AppSampleWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="DwarfDB App Sample"
	Height="416"
	Width="464">
	<Grid>
		<TextBox
			Text="input..."
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="151,8,8,346"
			x:Name="name" />
		<DataGrid
			x:Name="EmployeeGrid"
			Width="438"
			Height="269"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			Margin="8,0,0,8" />
		<TextBox
			Text="input..."
			x:Name="surname"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="151,46,8,308" />
		<Label
			Width="130"
			Height="30"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="0,8,311,0"
			x:Name="label1"
			Content="Name:" />
		<Label
			Height="30"
			x:Name="label2"
			Grid.Column="0"
			Grid.Row="0"
			VerticalAlignment="Top"
			Content="Surname:"
			Width="130"
			HorizontalAlignment="Left"
			Margin="13,46,0,0" />
		<Button
			Content="Add"
			Width="75"
			Height="23"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="0,76,8,0"
			x:Name="GoOn"
			Click="GoOn_Click" />
	</Grid>
</Window>